{
  "env": {
    "browser": true,
    "es2021": true,
    "amd": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-native", "import"],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "semi": ["warn", "never"],
    "linebreak-style": "off",
    "react/jsx-filename-extension": "off",
    "react/prop-types": "off",
    "object-curly-spacing": ["warn", "always"],
    "no-var": "error",
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "const",
        "next": "return"
      },
      {
        "blankLine": "always",
        "prev": "import",
        "next": "const"
      }
    ]
  }
}
